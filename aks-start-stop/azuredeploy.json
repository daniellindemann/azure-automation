{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.11.1.770",
      "templateHash": "17804643157765967915"
    }
  },
  "parameters": {
    "automationAccountName": {
      "type": "string",
      "metadata": {
        "description": "Automation Account name"
      }
    },
    "scheduleStartDate": {
      "type": "string",
      "defaultValue": "[dateTimeAdd(utcNow(), 'PT1H')]",
      "metadata": {
        "description": "Schedule start date (must be in the future)\nUse ISO8601 date string, e.g. '2022-10-19T10:01:00+02:00'\n"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of automation account"
      }
    },
    "jobScheduleGuid": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "Required Guid for the job schedule creation"
      }
    }
  },
  "variables": {
    "scriptUri": "https://raw.githubusercontent.com/daniellindemann/azure-automation/dev/aks-start-stop/aks-start-stop/Auto-Start-Stop-AKS.ps1"
  },
  "resources": [
    {
      "type": "Microsoft.Automation/automationAccounts/runbooks",
      "apiVersion": "2022-08-08",
      "name": "[format('{0}/AutoStartStopAks', parameters('automationAccountName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "runbookType": "PowerShell7",
        "publishContentLink": {
          "uri": "[variables('scriptUri')]",
          "version": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/schedules",
      "apiVersion": "2022-08-08",
      "name": "[format('{0}/15min', parameters('automationAccountName'))]",
      "properties": {
        "description": "Runs every 15 minutes",
        "frequency": "Minute",
        "interval": 15,
        "startTime": "[parameters('scheduleStartDate')]"
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/jobSchedules",
      "apiVersion": "2022-08-08",
      "name": "[format('{0}/{1}', parameters('automationAccountName'), parameters('jobScheduleGuid'))]",
      "properties": {
        "parameters": {
          "SubscriptionId": "[subscription().subscriptionId]"
        },
        "runbook": {
          "name": "[substring(format('{0}/AutoStartStopAks', parameters('automationAccountName')), add(lastIndexOf(format('{0}/AutoStartStopAks', parameters('automationAccountName')), '/'), 1))]"
        },
        "schedule": {
          "name": "15min"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts/runbooks', split(format('{0}/AutoStartStopAks', parameters('automationAccountName')), '/')[0], split(format('{0}/AutoStartStopAks', parameters('automationAccountName')), '/')[1])]"
      ]
    }
  ]
}